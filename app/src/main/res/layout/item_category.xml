<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin">

    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="#D3D3D3" />

    <LinearLayout
        android:id="@+id/category_header_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/category_item_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="CategoryName"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/medium_text" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/category_add_item_button"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_name"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_sub_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/category_spend_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ProgressBar
                    android:id="@+id/budget_spend_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/circle"
                    android:rotation="270" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/category_spend_progressBar_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="25%"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />
            </RelativeLayout>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/category_spend_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="50/100" />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/category_open_category_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_forward_black_24dp"/>
    </LinearLayout>


</android.widget.LinearLayout>