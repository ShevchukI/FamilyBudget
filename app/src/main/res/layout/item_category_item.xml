<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="#D3D3D3" />

    <LinearLayout
        android:id="@+id/category_item_header_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/category_item_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/grill_icon_text"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/medium_text" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/category_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/name_text"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/medium_text" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/category_item_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/price_text"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/medium_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_item_sub_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/category_item_added_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="02/02/2002" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/category_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="18sp"
            tools:text="Year: 1993" />
    </LinearLayout>

</android.widget.LinearLayout>